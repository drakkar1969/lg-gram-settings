<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!--// MainWindow template //-->
  <template class="MainWindow" parent="AdwApplicationWindow">
    <property name="default-width">600</property>
    <property name="default-height">600</property>
    <property name="title">LG Gram Settings</property>
    <property name="content">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
          </object>
        </child>
        <property name="content">
          <object class="GtkBox" id="main_box">
            <child>
              <object class="AdwPreferencesPage">
                <!-- <property name="title">General</property>
                <property name="icon-name">org.gnome.Settings-symbolic</property> -->
                <property name="banner">
                  <object class="AdwBanner" id="lock_banner">
                    <property name="revealed">true</property>
                    <property name="title">Some settings are locked</property>
                    <property name="button-label">_Unlockâ€¦</property>
                    <property name="button-style">suggested</property>
                  </object>
                </property>
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Kernel Features</property>
                    <child>
                      <object class="AdwSwitchRow" id="fnlock_row">
                        <property name="title">FN _Lock</property>
                        <property name="use-underline">true</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwSwitchRow" id="reader_row">
                        <property name="title">_Reader Mode</property>
                        <property name="subtitle">In reader mode the screen colors change (blue color reduced)</property>
                        <property name="use-underline">true</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwSpinRow" id="battery_row">
                        <property name="title">_Battery Care Limit</property>
                        <property name="subtitle">Set the maximum capacity to charge the battery: limiting the charge reduces battery capacity loss over time</property>
                        <property name="use-underline">true</property>
                        <property name="numeric">true</property>
                        <property name="snap-to-ticks">true</property>
                        <property name="adjustment">
                          <object class="GtkAdjustment">
                            <property name="lower">50</property>
                            <property name="page-increment">5</property>
                            <property name="step-increment">1</property>
                            <property name="upper">100</property>
                            <property name="value">100</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwSwitchRow" id="fan_row">
                        <property name="title">Silent _Fan Mode</property>
                        <property name="use-underline">true</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwSwitchRow" id="usb_row">
                        <property name="title">_USB Charge</property>
                        <property name="subtitle">Charge another device from the USB port while the device is turned off</property>
                        <property name="use-underline">true</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>

